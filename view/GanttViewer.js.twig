        .done(function(data){
            ge.loadProject(data);
            ge.checkpoint(); //empty the undo stack
	        console.warn('bPrintable:{{bPrintable}}');
	        {% if(bPrintable!=1)  %}
		        var maxHeight=ge.rowHeight*data.tasks.length+60;
	            var myHeight=Math.min( $(window).height() - $('#TWGanttArea').position().top, maxHeight);
	            $('#TWGanttArea').height( myHeight);
		        $('#TWGanttArea').css('max-height', maxHeight+'px');
	            $('#TWGanttArea').find(".splitBox2").scrollLeft(700);

		        //scrollTop: $(this).offset().top + $(this).height() / 2;
	        {% else %}
	            ge.isPrintable=true;
	            ge.resize();
	        {% endif %}
        });



}

